#:kivy 1.0

&ltPlotter&gt:
    canvas:
        Color: 
            rgb: self.bgColor
        Rectangle:
            pos: 0,0
            size: self.size

        Color: 
            rgb: self.plotColor
        Line:
            width: self.plotWidth
            points: self.points

        Color: 
            rgb: self.axisColor
        Line:
            width: self.axisWidth
            points: [ (-self.xRange[0])*self.xpp, 0, (-self.xRange[0])*self.xpp, self.height ]
        Line:
            width: self.axisWidth
            points: [ 0, (-self.yRange[0])*self.ypp, self.width, (-self.yRange[0])*self.ypp ]

    Label:
        text: self.parent.text
        center: self.parent.center_x, 9*self.parent.top/10

